{
  "name": "shirkhan-markdown",
  "displayName": "shirkhan-markdown",
  "description": "shirkhan markdown converter",
  "publisher": "iShirkhan",
  "version": "1.2.0",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "markdown.markdownItPlugins": true,
    "markdown.previewStyles": [
      "css/light-theme.css",
      "css/katex-block.css"
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == markdown",
          "submenu": "shirkhan",
          "group": "navigation"
        }
      ],
      "shirkhan": [
        {
          "command": "shirkhan-markdown.changeConvertState",
          "group": "navigation@1"
        },
        {
          "command": "shirkhan-markdown.changeMarkdownToUg",
          "group": "navigation@2"
        },
        {
          "command": "shirkhan-markdown.changeMarkdownToKhan",
          "group": "navigation@3"
        }
      ]
    },
    "submenus": [
      {
        "id": "shirkhan",
        "label": "shirkhan"
      }
    ],
    "commands": [
      {
        "command": "shirkhan-markdown.shirkhanMenuCommand",
        "title": "shirkhan",
        "category": "Markdown",
        "when": "editorLangId == markdown"
      },
      {
        "command": "shirkhan-markdown.changeConvertState",
        "title": "shirkhan 预览区 uyghurche 显示 [On/Off]",
        "category": "Markdown",
        "when": "editorLangId == markdown"
      },
      {
        "command": "shirkhan-markdown.changeMarkdownToUg",
        "title": "shirkhan markdown 转换成 uyghur markdown",
        "when": "editorLangId == markdown",
        "category": "Markdown"
      },
      {
        "command": "shirkhan-markdown.changeMarkdownToKhan",
        "title": "shirkhan uyghurche markdown 转换成 shirkhan markdown",
        "when": "editorLangId == markdown",
        "category": "Markdown"
      }
    ],
    "configuration": {
      "title": "shirkhan-markdown",
      "properties": {
        "shirkhanMarkdown.activeConvert": {
          "type": "boolean",
          "default": true,
          "description": "默认是自动转换状态，设置false默认不会启动，需要切换状态才能转换"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn esbuild-base  --minify",
    "esbuild-base": "esbuild ./src/main.js --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "yarn esbuild-base  --sourcemap",
    "esbuild-watch": "yarn esbuild-base  --sourcemap --watch",
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js",
    "build": "vsce package --no-yarn",
    "changelog:first": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && yarn changeissueurl",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && yarn changeissueurl",
    "release": "./scripts/release.sh",
    "release:major": "yarn release -r major",
    "release:minor": "yarn release -r minor",
    "release:patch": "yarn release -r patch",
    "changeissueurl": "replace 'https://github.com/ishirkhan/shirkhan-vscode/commit/' 'https://gitee.com/silvaq/shirkhan-vscode/commit/'"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.1",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "typescript": "4.4.4",
    "vsce": "1.103.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.x",
    "markdown-it-emoji": "^2.0.0",
    "replace": "^1.2.1",
    "shirkhan-alphabet": "^1.x",
    "shirkhan-remark": "^1.x",
    "shirkhan-retext": "^1.x",
    "standard-version": "^9.3.2",
    "unified": "^10.0.0"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "bugs": {
    "url": "https://github.com/ishirkhan/shirkhan-vscode.git",
    "email": "uybabbage@hotmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ishirkhan/shirkhan-vscode.git"
  }
}
